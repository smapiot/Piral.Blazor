@page "/counter"
@inject IConsoleMessageService consoleMessageService
@inject IStringLocalizer<CounterPage> loc
@inject IPiletService pilet

<h1>Counter from Pilet!</h1>

<h2>@loc["greeting"]</h2>

<p>Current count: @currentCount</p>

<p>Current language: @System.Globalization.CultureInfo.CurrentCulture.Name</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    int currentCount = 0;

    protected override void OnInitialized()
    {
        pilet.LanguageChanged += (s, e) => this.StateHasChanged();
        base.OnInitialized();
    }

    void IncrementCount()
    {
        currentCount++;
    }
}
